<Window x:Class="guiDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PavKevUI" Width="1920" Height="1080" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Canvas>
        <Image Source="{StaticResource Dashboard}" Width="1920" Height="1080" />
        <Canvas>
            <Image Source="{StaticResource Speedometer}" Width="533" Height="537" 
                   Canvas.Left="1293" Canvas.Top="326" />
            <Image Source="{StaticResource SpeedometerNeedle}" Width="295" Height="410" 
                   Canvas.Left="1412" Canvas.Top="332">
                <Image.RenderTransform>
                    <RotateTransform CenterX="147" CenterY="262" Angle="{Binding SpeedometerNeedleRotation}" />
                </Image.RenderTransform>
            </Image>
            <Grid Width="295" Height="293" Canvas.Left="1412" Canvas.Top="443">
                <Label Content="{Binding Speed}" FontSize="120" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
            
        </Canvas>

    </Canvas>

</Window>